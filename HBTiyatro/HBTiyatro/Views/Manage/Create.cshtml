@model HBTiyatro.Models.Kullanici
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">   
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    @*<form action="~/Views/Manage/Kayıt.cshtml" method="post">*@
    @using (Html.BeginForm("Create", "Manage", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true,"",new { @class="text-danger"})
        <div class="container" id="showyap">
            <div>
                <div class="jumbotron">
                    <h1>Kullanıcı Kayıt Sayfasıdır</h1>
                    <p>Tüm Alanlar Zorunludur</p>
                </div>
            </div>

            <div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Kullanıcı Adı:</label>
                    <div class="col-sm-2">
                        <input type="text" name="KullaniciAdi" placeholder="Adınızı Giriniz:" />
                        @Html.ValidationMessageFor(Model=>Model.KullaniciAdi,"",new { @class="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Kullanıcı Soyadı:</label>
                    <div class="col-sm-2">
                        <input type="text" name="KullaniciSoyadi" placeholder="Soyadınızı Giriniz:" />
                        @Html.ValidationMessageFor(Model => Model.KullaniciSoyadi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Telefon:</label>
                    <div class="col-sm-2">
                        <input type="text" name="Telefon" placeholder="Telefon Giriniz:" />
                        @Html.ValidationMessageFor(Model => Model.Telefon, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">E-posta:</label>
                    <div class="col-sm-2">
                        <input type="text" name="EPosta" placeholder="E-posta Giriniz:" />
                        @Html.ValidationMessageFor(m=>m.EPosta, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Şifre:</label>
                    <div class="col-sm-2">
                        <input type="password" name="Sifre" placeholder="Sifre Giriniz: En fazla 8 karakter!!" />
                        @Html.ValidationMessageFor(Model => Model.Sifre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Şifre Tekrar:</label>
                    <div class="col-sm-2">
                        <input type="password" name="SifreTekrari" placeholder="Tekrar Giriniz: En fazla 8 karakter!!" />
                        @Html.ValidationMessageFor(Model => Model.SifreTekrari, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2">
                        <button class="btn btn-success" type="submit" value="Ekle">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>

