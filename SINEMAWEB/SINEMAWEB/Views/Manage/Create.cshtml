

<h2>Create</h2>

@model SINEMAWEB.Models.uyetb
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery.validate.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    @*<form action="~/Views/Manage/Kayıt.cshtml" method="post">*@
    @using (Html.BeginForm("Create", "Manage", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container" id="showyap">
            <div>
                <div class="jumbotron">
                    <h1>Kullanıcı Kayıt Sayfasıdır</h1>
                    <p>Tüm Alanlar Zorunludur</p>
                </div>
            </div>

            <div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Kullanıcı Adı:</label>
                    <div class="col-sm-2">
                        <input type="text" name="ad" placeholder="Adınızı Giriniz:" />
                        @Html.ValidationMessageFor(model => model.ad, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Kullanıcı Soyadı:</label>
                    <div class="col-sm-2">
                        <input type="text" name="soyad" placeholder="Soyadınızı Giriniz:" />
                        @Html.ValidationMessageFor(model => model.soyad, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Telefon:</label>
                    <div class="col-sm-2">
                        <input type="text" name="uyetelefon" placeholder="Telefon Giriniz:" />
                        @Html.ValidationMessageFor(model => model.uyetelefon, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">E-posta:</label>
                    <div class="col-sm-2">
                        <input type="text" name="mail" placeholder="E-posta Giriniz:" />
                        @Html.ValidationMessageFor(model => model.mail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Şifre:</label>
                    <div class="col-sm-2">
                        <input type="password" name="Sifre" placeholder="Sifre Giriniz: En fazla 8 karakter!!" />
                        @Html.ValidationMessageFor(model => model.sifre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Tc No:</label>
                    <div class="col-sm-2">
                        <input type="text" name="tcno" placeholder="Sifre Giriniz: En fazla 8 karakter!!" />
                        @Html.ValidationMessageFor(model => model.tcno, "", new { @class = "text-danger" })
                    </div>
                </div>
              
                <div class="form-group">
                    <div class="col-sm-offset-2">
                        <button class="btn btn-success" type="submit" value="Ekle">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>


